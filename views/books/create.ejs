<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <% include ../partials/head %>
</head>
<body>
	<% include ../partials/nav %>
	<div class="container">
	    <div class="col-md-8 col-md-offset-2">
	        <form class="form-horizontal" method="post" action="/manage/book/add" enctype="multipart/form-data">
	            <fieldset>
	                <legend>Agregar Nuevo Libro</legend>
	                <div class="form-group">
	                    <label class="col-lg-2 control-label" for="title">Titulo</label>
	                    <div class="col-lg-10">
	                        <input class="form-control" id="title" name="title" type="text" placeholder="La Iliada">
	                    </div>
	                </div>
	                <div class="form-group">
	                    <label class="col-lg-2 control-label" for="description">Descripcion</label>
	                    <div class="col-lg-10">
	                        <input class="form-control" id="description" name="description" type="text" placeholder="Cuento de mitología Griega">
	                    </div>
	                </div>
	                <div class="form-group">
	                    <label class="col-lg-2 control-label" for="category">Categoría</label>
	                    <div class="col-lg-10">
	                        <select class="form-control" id="category" name="category">
	                        <% categories.forEach(function(category){ %>
	                            <option value="<%= category.name %>"><%= category.name %></option>
	                        <% }); %>
	                        </select> 
	                    </div>
	                </div>
	                <div class="form-group">
	                    <label class="col-lg-2 control-label" for="author">Autor</label>
	                    <div class="col-lg-10">
	                        <input class="form-control" id="author" name="author" type="text" placeholder="Homero">
	                    </div>
	                </div>
	                <div class="form-group">
	                    <label class="col-lg-2 control-label" for="price">Editor</label>
	                    <div class="col-lg-10">
	                        <input class="form-control" id="publisher" name="publisher" type="number" placeholder="5000">
	                    </div>
	                </div>
	                <div class="form-group">
	                    <label class="col-lg-2 control-label" for="price">Precio</label>
	                    <div class="col-lg-10">
	                        <input class="form-control" id="price" name="price" type="number" placeholder="5000">
	                    </div>
	                </div>
	                <div class="form-group">
	                    <label class="col-lg-2 control-label" for="cover">Cover</label>
	                    <div class="col-lg-10">
	                        <input class="form-control" id="cover" name="cover" type="file" placeholder="Imagen de portada">
	                        <input type="hidden" maxlength="1000000">
	                    </div>
	                </div>
	                <input type="hidden" name="_csrf" value="{_csrf}">
	                <div class="form-group">
	                    <div class="col-md-4 col-md-offset-5">
	                        <input type="submit" name="addBook" class="btn btn-primary btn-block" value="Agregar">
	                    </div>
	                </div>
	            </fieldset>
	        </form>  
	    </div>
    </div>
</body>
</html>
   

