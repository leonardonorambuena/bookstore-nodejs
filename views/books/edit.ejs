<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <% include ../partials/head %>
</head>
<body>
	<% include ../partials/nav %>
	<div class="container">
	    <div class="col-md-8 col-md-offset-2">
	        <form class="form-horizontal" method="post" action="/books/<%= book._id %>"> 
	            <fieldset>
	                <legend>Editar Libro</legend>
	                <div class="form-group">
	                    <label class="col-lg-2 control-label" for="title">Titulo</label>
	                    <div class="col-lg-10">
	                        <input class="form-control" id="title" name="title" value="<%= book.title %>" type="text" placeholder="La Iliada">
	                    </div>
	                </div>
	                <div class="form-group">
	                    <label class="col-lg-2 control-label" for="description">Descripcion</label>
	                    <div class="col-lg-10">
	                        <input class="form-control" id="description" name="description" value="<%= book.description %>" type="text" placeholder="Cuento de mitología Griega">
	                    </div>
	                </div>
	                <div class="form-group">
	                    <label class="col-lg-2 control-label" for="category">Categoría</label>
	                    <div class="col-lg-10">
	                        <select class="form-control" id="category" name="category">
	                        
	                            <option value="<%= book.category %>"><%= book.category %></option>
	                        
	                        </select> 
	                    </div>
	                </div>
	                <div class="form-group">
	                    <label class="col-lg-2 control-label" for="author">Autor</label>
	                    <div class="col-lg-10">
	                        <input class="form-control" id="author" name="author" value="<%= book.author %>" type="text" placeholder="Homero">
	                    </div>
	                </div>
	                <div class="form-group">
	                    <label class="col-lg-2 control-label" for="price">Cantidad</label>
	                    <div class="col-lg-10">
	                        <input class="form-control" id="quantity" name="quantity" value="<%= book.quantity %>" type="number" placeholder="5000">
	                    </div>
	                </div>
	                <div class="form-group">
	                    <label class="col-lg-2 control-label" for="price">Precio</label>
	                    <div class="col-lg-10">
	                        <input class="form-control" id="price" name="price" type="number" value="<%= book.price %>" placeholder="5000">
	                    </div>
	                </div>
	                <div class="form-group">
	                    <img src="/images/books/<%= book.cover %>" alt="Imagen del Libro" class="img-thumbail">
	                </div>
	                <div class="form-group">
	                    <div class="col-md-4 col-md-offset-5">
	                        <input type="submit" name="addBook" class="btn btn-primary btn-block" value="Actualizar">
	                    </div>
	                </div>
	            </fieldset>
	        </form>  
	    </div>
    </div>
</body>
</html>